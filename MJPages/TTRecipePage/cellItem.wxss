/* pages/我的/me/me.wxss */

.cell-view {
  width: 100%;
  padding-top: 10px;
  padding-right: 24rpx;
  padding-bottom: 10px;
  padding-left: 24rpx;
} 

.cell-header-view {
  width: calc(100vw - 24rpx - 24rpx);
  height: 100rpx;
  display: flex;
  flex-direction: row;
}

.cell-header-avatar {
  width: 84rpx;
  height: 84rpx;
  margin-right: 24rpx;
  border-radius:10rpx;
}

.cell-header-describe {
  height: 100rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.cell-header-nikeName {
  height: 70rpx;
  font-size: 36rpx;
  color: #576C93;
  font-weight: 470;
}

.cell-header-describe-space {
  flex: 1;
}

.cell-header-time {
  height: 50rpx;
  font-size: 28rpx;
  color: #B2B2B2;
}

.cell-header-key {
  width: 150rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
}

.cell-header-catagory {
  width: 150rpx;
  height: 100rpx;
  font-size: 36rpx;
  font-weight: 460;
  text-align: right;
  padding-right: 10rpx;
}

.cell-header-catagory-line {
  width: 6rpx;
  height: 52rpx;
  background-color: #3b7ada;
}

.cell-body-view {
  margin-top: 10rpx;
  width: calc(100vw - 24rpx - 24rpx);
}

.cell-body-content {
  margin-left: calc(24rpx + 84rpx);
  width: calc(100% - 24rpx - 84rpx);
}

.cell-body-text {
  height: 120rpx;
  font-size: 32rpx;
  line-height: 40rpx;
  font-weight: 400;
  color: #383838;
  letter-spacing: 1.5rpx;
  overflow: hidden;
}

.cell-body-text-more {
  height: 54rpx;
  font-size: 34rpx;
  margin-top: 10rpx;
  line-height: 40rpx;
  color: #576b95;
}

.cell-body-pictures {
  width: 510rpx;
  height: 160rpx;
  display: flex;
  flex-direction: row;
}

.cell-body-picture {
  height: 160rpx;
  margin-right: 10rpx;
  flex: 1;
}

.cell-body-tags {
  margin-top: 10rpx;
  width: 100%;
  height: 132rpx;
  overflow: hidden;
}

.cell-body-info {
  width: 100%;
  height: 70rpx;
  display: flex;
  flex-direction: row;
}

.cell-body-info-item {
  flex: 1;
  text-align: left;
  font-size: 26rpx;
  line-height: 40rpx;
  font-weight: 300;
  padding-top: 24rpx;
  color: #576b95;
}

.cell-line-view {
  width: calc(100vw - 24rpx - 24rpx);
  background-color: #E1E1DF;
  height: 1rpx;
  margin-left: 24rpx;
}
