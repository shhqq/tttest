/* MJPages/TTMePage/TTMePage.wxss */

page {
  height: 100%;
  display: flex;
  flex-direction: column;
  position: absolute;
}

#me-content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  position: absolute;
}

#me-top-background {
  background-color: lightgreen;
  width: 100%;
  height: 400rpx;
  position: absolute;
  z-index: -1;
}

#me-bottom-background {
  width: 100%;
  margin-top: 400rpx;
  height: calc(100% - 400rpx);
  background-color: #ffdead;
  position: absolute;
  z-index: -1;
}

#me-detail-content {
  width: calc(100vw - 30rpx - 30rpx);
  height: 100%;
  position: absolute;
  margin-left: 30rpx;
  opacity: 1;
  display: flex;
  flex-direction: column;
  z-index: 1;
}

#me-head-content {
  width: 100%;
  height: 280rpx;
  /* background-color:aqua; */
  display: flex;
  flex-direction: row;
}

#me-head-avatar-bg {
  margin-top: 60rpx;
  margin-bottom: 60rpx;
  height: 160rpx;
  width: 160rpx;
  border-radius: 80rpx;
  background-color: white;
}

#me-head-avatar {
  margin-top: 5rpx;
  margin-left: 5rpx;
  margin-right: 5rpx;
  margin-bottom: 5rpx;
  height: 150rpx;
  width: 150rpx;
  border-radius: 75rpx;
}

#me-tab {
  width: 100%;
  height: 200rpx;
  background-color: white;
  border-radius: 23rpx;
  display: flex;
  justify-content: space-around;
}

.me-tab-item {
  height: 200rpx;
  width: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.me-tab-item-icon-content {
  height: 100rpx;
  width: 100%;
  display: flex;
  justify-content: center;
}

.me-tab-item-icon {
  height: 80rpx;
  margin-top: 10rpx;
  width: 80rpx;
}

.me-tab-item-icon-title {
  text-align: center;
  font-size: 30rpx;
  font-weight: 460;
}

#me-body {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  width: 100%;
  flex: 1;
  background-color: white;
  border-radius: 23rpx;
  display: flex;
}

#me-body-background {
  width: calc(100% - 50rpx - 50rpx);
  height: 100%;
  position: absolute;
  margin-left: 50rpx;
  display: flex;
  flex-direction: column;
}

.me-body-item {
  display: flex;
  flex-direction: row;
  height: 130rpx;
  width: 100%;
}

.me-body-item-icon-bg {
  display: flex;
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中 */
}

.me-body-item-icon {
  height: 50rpx;
  width: 50rpx;
}

.me-tab-item-title-bg {
  display: flex;
  align-items: center; /* 垂直居中 */
}

.me-tab-item-title {
  padding-left: 20rpx;
  text-align: left;
  font-size: 30rpx;
  font-weight: 460;
}

.me-body-line {
  height: 1rpx;
  width: 100%;
  background-color: black;
}
